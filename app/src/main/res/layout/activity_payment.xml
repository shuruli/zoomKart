<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="zoomkart.paykart.activities.PaymentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".85"
            android:background="@drawable/produce"
            android:layout_gravity="center"
            android:gravity="center_horizontal|center_vertical"
            android:alpha="0.5"
            android:weightSum="1"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:background="@drawable/rounded_rect_shape">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Checkout"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:textSize="12pt"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="#000000" />

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/subtotal_label"
                        android:text="Subtotal: "
                        android:textSize="10pt"
                        android:layout_alignParentLeft="true"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/subtotal_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="$0.00"
                        android:textSize="10pt"
                        android:layout_alignParentRight="true"
                        android:textColor="#000000" />
                </RelativeLayout>

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tax_label"
                        android:text="Tax (13%): "
                        android:textSize="10pt"
                        android:layout_alignParentLeft="true"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/tax_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="$0.00"
                        android:textSize="10pt"
                        android:layout_alignParentRight="true"
                        android:textColor="#000000" />
                </RelativeLayout>

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/total_label"
                        android:text="Total: "
                        android:textSize="10pt"
                        android:layout_alignParentLeft="true"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/total_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="$0.00"
                        android:textSize="10pt"
                        android:layout_alignParentRight="true"
                        android:textColor="#000000" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/initiate_pay_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_weight="0.15"
            android:background="@color/colorPrimaryGreen"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:textAlignment="center"
                android:textSize="20dp"
                android:fontFamily="sans-serif-light"
                android:textAllCaps="true"
                android:textStyle="normal"
                android:text="Pay Now" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
